# GRYPHGEN Environment Configuration
# Copy this file to .env and update with your settings

# General Configuration
GRYPHGEN_LOG_LEVEL=INFO
GRYPHGEN_DEBUG=false
GRYPHGEN_ENV=production

# GPU Configuration
GRYPHGEN_GPU_ENABLED=true
GRYPHGEN_GPU_DEVICE_ID=0
GRYPHGEN_GPU_MEMORY_FRACTION=0.85

# LLM Configuration
GRYPHGEN_LLM_PROVIDER=openai  # openai, anthropic, local
GRYPHGEN_LLM_MODEL=gpt-4-turbo-preview
GRYPHGEN_LLM_API_KEY=your-api-key-here
GRYPHGEN_LLM_TEMPERATURE=0.7
GRYPHGEN_LLM_MAX_TOKENS=2048

# Redis Configuration
GRYPHGEN_REDIS_HOST=localhost
GRYPHGEN_REDIS_PORT=6379
GRYPHGEN_REDIS_DB=0
GRYPHGEN_REDIS_PASSWORD=

# ZeroMQ Configuration
GRYPHGEN_ZEROMQ_ORCHESTRATOR_PORT=5555
GRYPHGEN_ZEROMQ_SCHEDULER_PORT=5556
GRYPHGEN_ZEROMQ_WORKER_PORT=5557
GRYPHGEN_ZEROMQ_PUB_PORT=5558
GRYPHGEN_ZEROMQ_SUB_PORT=5559

# Resource Limits
GRYPHGEN_RESOURCES_MAX_CPU_PERCENT=80.0
GRYPHGEN_RESOURCES_MAX_MEMORY_PERCENT=80.0
GRYPHGEN_RESOURCES_MAX_GPU_MEMORY_PERCENT=90.0
GRYPHGEN_RESOURCES_MIN_FREE_DISK_GB=10.0

# Monitoring Configuration
GRYPHGEN_MONITORING_ENABLED=true
GRYPHGEN_MONITORING_PROMETHEUS_PORT=9090
GRYPHGEN_MONITORING_METRICS_INTERVAL=30

# Paths
GRYPHGEN_DATA_DIR=./data
GRYPHGEN_LOGS_DIR=./logs
GRYPHGEN_CACHE_DIR=./cache

# Docker Configuration
GRYPHGEN_DOCKER_STOP_SERVICES_ON_SHUTDOWN=false
