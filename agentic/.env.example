# ============================================================================
# GRYPHGEN Agentic - Environment Configuration
# ============================================================================

# API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Database Configuration
POSTGRES_USER=agentic
POSTGRES_PASSWORD=agentic_password_change_me
POSTGRES_DB=agentic_db
DATABASE_URL=postgresql://agentic:agentic_password_change_me@postgres:5432/agentic_db

# MinIO/S3 Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin_change_me
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin_change_me
MINIO_BUCKET=agentic-artifacts

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_CODE_GENERATION=code-generation
KAFKA_TOPIC_TESTING=automated-testing
KAFKA_TOPIC_DOCUMENTATION=documentation
KAFKA_TOPIC_PROJECT_MGMT=project-management
KAFKA_TOPIC_COLLABORATION=collaboration
KAFKA_TOPIC_SELF_IMPROVEMENT=self-improvement

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin_change_me

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
GPU_MEMORY_LIMIT=14  # In GB (leave 2GB for system on RTX 4080)
TORCH_CUDA_ARCH_LIST=8.9  # RTX 4080 compute capability

# Model Configuration
CODE_GEN_MODEL=gpt-4-turbo
CODE_GEN_TEMPERATURE=0.7
CODE_GEN_MAX_TOKENS=4096

# Service Ports
API_GATEWAY_PORT=8000
CODE_GENERATION_PORT=8001
AUTOMATED_TESTING_PORT=8002
PROJECT_MANAGEMENT_PORT=8003
DOCUMENTATION_PORT=8004
COLLABORATION_PORT=8005
SELF_IMPROVEMENT_PORT=8006

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-me-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Performance
WORKERS=4
MAX_REQUESTS=1000
TIMEOUT=30

# Development
DEBUG=false
RELOAD=false
