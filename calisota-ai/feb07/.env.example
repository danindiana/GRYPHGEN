# CALISOTA AI Engine - Environment Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME="CALISOTA AI Engine"
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000

# GPU Configuration - RTX 4080 16GB
CUDA_DEVICE=0
CUDA_VISIBLE_DEVICES=0
GPU_MEMORY_FRACTION=0.85
MAX_BATCH_SIZE=32
ENABLE_MIXED_PRECISION=true
ENABLE_FLASH_ATTENTION=true

# API Keys (REQUIRED)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=...

# Model Configuration
SLOW_THINKER_MODEL=gpt-4
FAST_THINKER_MODEL=gpt-3.5-turbo
ACTOR_CRITIC_MODEL=gpt-3.5-turbo
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2

# FAISS Configuration
FAISS_INDEX_PATH=./data/faiss_index
FAISS_DIMENSION=768
FAISS_NLIST=100
FAISS_NPROBE=10
USE_GPU_INDEX=true
MAX_INDEX_SIZE=1000000

# RAG Configuration
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7

# Sandbox Configuration
SANDBOX_TIMEOUT=300
MAX_CONCURRENT_SANDBOXES=5
DOCKER_NETWORK=calisota-net

# Human-in-the-Loop
REQUIRE_HUMAN_APPROVAL=true
APPROVAL_TIMEOUT=3600
AUTO_APPROVE_THRESHOLD=0.95

# Monitoring
LOG_LEVEL=INFO
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090
SENTRY_DSN=

# Redis/Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Self-Healing
ENABLE_SELF_HEALING=true
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=2.0
