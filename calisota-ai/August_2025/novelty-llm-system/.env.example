# Novelty LLM System - Environment Variables Template
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4

# Redis
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=50

# PostgreSQL
POSTGRES_URL=postgresql://novelty:novelty_pass@localhost:5432/novelty_db
POSTGRES_POOL_SIZE=20

# Milvus
MILVUS_HOST=localhost
MILVUS_PORT=19530

# Ollama
OLLAMA_HOST=http://localhost:11434

# Novelty Engine
NOVELTY_MODEL=all-MiniLM-L6-v2
NOVELTY_DEVICE=cpu  # or cuda for GPU

# Caching
SEMANTIC_CACHE_TTL=3600
SEMANTIC_CACHE_THRESHOLD=0.85
RESPONSE_CACHE_TTL=3600
RESPONSE_CACHE_MAX_SIZE_MB=1000

# Security
JWT_SECRET=change-this-to-a-random-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# PII Detection
PII_DETECTION_ENABLED=true
PII_ANONYMIZE=true

# Object Storage (S3/MinIO)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=novelty-llm

# Feature Flags
FEATURE_STREAMING=true
FEATURE_MULTIMODAL=false
FEATURE_FINE_TUNING=false
